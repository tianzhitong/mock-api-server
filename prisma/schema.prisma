generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ReponseModel {
  id         Int     @id @default(autoincrement())
  name       String? @unique() @db.VarChar(255)
  model_data String? @db.LongText()

  @@map("response_model")
}

model Mock {
  id                           Int       @id @default(autoincrement())
  project_name                 String    @default("default") @db.VarChar(255)
  api_url                      String    @db.VarChar(255)
  api_method                   String    @db.Char(10)
  query                        String?   @db.VarChar(255)
  response_to_mock_struct_data String?   @db.LongText()
  create_at                    DateTime  @default(now()) @db.Timestamp(6)
  update_at                    DateTime  @updatedAt
  delete_at                    DateTime?

  @@unique([project_name, api_url, api_method])
  @@index([project_name, api_url, api_method])
  @@map("mock")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique @db.VarChar(255)
  password  String    @db.VarChar(255)
  role      Role      @default(USER)
  create_at DateTime  @default(now()) @db.Timestamp(6)
  update_at DateTime  @updatedAt
  delete_at DateTime?
  nick_name String    @db.VarChar(255)
  avator    String    @default("http://www.baidu.com")
  sex       Sex       @default(UNKNOW)

  @@map("user")
}

enum Role {
  USER  @map("user")
  ADMIN @map("admin")
}

enum Sex {
  MAN    @map("男")
  WOMAN  @map("女")
  UNKNOW @map("未知")
}
